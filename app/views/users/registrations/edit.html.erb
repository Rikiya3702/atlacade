<section class="bg-base pb-5">
  <div class="container text-center">
    <h2 class="display-4 py-4">アカウント設定</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field row mb-5">
        <%= f.label :nickname, "ユーザー名", class: "col-sm-5 text-right" %><br />
        <%= f.text_field :nickname, class: "col-sm-3", autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field row mb-5">
        <%= f.label :profile, "紹介文", class: "col-sm-5 text-right" %><br />
        <%= f.text_area :profile, class: "col-sm-3", autofocus: true %>
      </div>
      <div class="field row mb-5">
        <%= f.label :email, "メールアドレス", class: "col-sm-5 text-right" %><br />
        <%= f.email_field :email, class: "col-sm-3", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field row my-3">
        <%= f.label :password, "パスワード", class: "col-sm-4 text-right" %>(変更する場合のみ)
        <% if @minimum_password_length %>
        <br><em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, class: "col-sm-3", autocomplete: "new-password" %>
      </div>

      <div class="field row mt-3">
        <%= f.label :password_confirmation, "パスワード（確認）", class: "col-sm-5 text-right"  %><br />
        <%= f.password_field :password_confirmation, class: "col-sm-3", autocomplete: "new-password" %>
      </div>

      <div class="field row mt-3">
        <%= f.label :current_password, "現在のパスワード", class: "col-sm-5 text-right" %><br />
        <%= f.password_field :current_password, class: "col-sm-3", autocomplete: "current-password" %>
      </div>

      <div class="actions my-5">
        <%= f.submit "変更を保存する", class: "btn1 bg-accent w-50" %>
      </div>
    <% end %>
    <hr class="mt-5">
    <h3 class="py-4">アカウントを削除する</h3>

    <p>Unhappy? <%= button_to "削除する", registration_path(resource_name), data: { confirm: "本当によろしいですか？" }, method: :delete, class: "btn1 bg-accent w-50 mb-5" %></p>

    <%= link_to "戻る", :back %>
  </div>
</section>
