- provide :title, "ログイン"
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .text-left.mb-5
    .form-column
      %i.fas.fa-pencil-alt
      = f.label       :email, "メールアドレス"
    %br
    = f.text_field    :email, class: "mt-1 ml-3 atl-textfield", autocomplete: "email"
  .text-left.mb-3
    .form-column
      %i.fas.fa-pencil-alt
      = f.label       :password, "パスワード"
    %br
    = f.password_field    :password, class: "mt-1 ml-3 atl-textfield"
  - if devise_mapping.rememberable?
    .form-tags
      = f.check_box      :remember_me
      = f.label          :remember_me, "ログイン状態を保存する", class: "pr-3"
      %br
    .mb-4
      = button_tag type: "submit", class: "atl-submit" do
        %i.fas.fa-sign-in-alt.fa-2x
        ログイン
      = link_to new_user_registration_path, class: "atl-btn ml-4" do
        %i.fas.fa-user-plus.fa-2x
        アカウントの登録
